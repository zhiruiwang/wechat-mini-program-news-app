/* 新闻类别tab */
.cat-list {
  width: 100%;
  border-bottom: 1rpx solid #ccc;
  text-align: center;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  background-color: #27b3f9;
}

.cat-item {
    width: 90rpx;
    flex-shrink: 0;
    flex-direction:column;
    align-items:center;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    padding-left: 20rpx;
    text-align:left;
    font-size:30rpx;
    line-height:42rpx;
    color: black;
}

.active{
    color:#F65959;
    border-bottom: 4rpx solid #F65959;
}

/* 头条新闻 */
/*width 750rpx, height 400rpx
400=300+28+20+42+10*/
 .head-wrapper{
  position: relative;
  padding-top: 300rpx;
}

.hot {
  position: absolute;
  right: 0;
  top: 0;
  color: white;
  background-color: red;
  font-size: 30rpx;
  line-height: 42rpx;
}

.head-title {
  text-align:left;
  font-size:30rpx;
  line-height:42rpx;
  color: white;
  padding-bottom: 20rpx;
  padding-left: 20rpx;
}

.head-source-date {
  text-align:left;
  font-size: 20rpx;
  line-height: 28rpx;
  opacity: 0.65;
  color: white;
  padding-bottom: 10rpx;
  padding-left: 20rpx;
}

.head-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
} 

/* 其余新闻 */
/*width 750rpx, height 200rpx
750=500+250
200=15+45+42+50+20+28*/
 .rest-wrapper{
  border-bottom: 1rpx solid #ccc;
  border-top: 1rpx solid #ccc;
  display: flex;
  flex-flow: row;
  position: relative;
  padding-top: 15rpx;
  padding-bottom: 45rpx;
}

 .rest-text{
  display: flex;
  flex-flow: column;
}

.rest-title {
  text-align:left;
  font-size:30rpx;
  line-height:42rpx;
  color: black;
  padding-top: 50rpx;
  padding-bottom: 20rpx;
  padding-left: 20rpx;
  width: 500rpx;
}

.rest-source-date {
  text-align:left;
  font-size: 20rpx;
  line-height: 28rpx;
  opacity: 0.65;
  color: black;
  padding-left: 20rpx;
}

.rest-image {
  width: 250rpx;
  height: 200rpx;
} 